{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"sourceMap": false,
		"pretty": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"es5",
			"dom",
			"es2015.promise",
			"es2015.core"
		]
	},
	"files": [
		"src/index.ts",
		"src/vue-typescript-component.ts"
	],
	"atom": {
		"rewriteTsconfig": false
	},
	"compileOnSave": false
}
